<h1>Make a new Recipe</h1>


<%= form_for @recipe do |f| %>

  <%= f.hidden_field :user_id, value: '@current_user.id' %>

  <%= f.hidden_field :category_id, value: 'hi' %>

  <select name=:category[name]>
    <option value="breakfast" selected="selected">Breakfast</option>
    <option value="lunch">Lunch</option>
    <option value="dinner">Dinner</option>
    <option value="beverage" selected="selected">Beverage</option>
  </select>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :difficulty %>
  <%= number_field_tag 'quantity', nil, min: 1, max: 10, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.label :instructions %>
  <%= f.text_area :instructions, cols: "30", rows: "10", class: 'form-control' %>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
